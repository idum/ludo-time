
<div class="container">
    <%= turbo_frame_tag event do %>
        <div class="container_full row">
            <%= link_to event.title, event_path(event), data: { turbo_frame: "_top" }, class: "col-2 border" %>
            <%= link_to event.location, "#", class: "col-3 border" %>
            <%= link_to event.date, "#", class: "col-2 border"%>
            <%= link_to "Delete", event_path(event), data: { "turbo-method": :delete }, class: "col-1  btn btn-danger" %>
            <%= link_to "Edit", edit_event_path(event), class: "col-1 btn btn-success" %>
        </div>
    <% end %>
</div>
